---
// src/components/sections/Header.astro
import Facebook from "../../assets/social-media/facebook.svg";
import Instagram from "../../assets/social-media/instagram.svg";
import TikTok from "../../assets/social-media/tiktok.svg";
import X from "../../assets/social-media/twitter.svg";
import LogoHorizontal from "../../assets/logos/logo-horizontal.png";
const current = Astro.url.pathname;
---

<header class="w-full flex flex-col">

  <!-- Top bar -->
  <div
    class="bg-black text-white flex flex-col sm:flex-row justify-between items-center gap-2 sm:gap-0
           px-4 sm:px-8 md:px-16 py-2 sm:py-4 text-xs sm:text-sm"
  >
    <!-- Social + handle -->
    <div class="flex items-center gap-2">
      {/** icons reducidos */}
      {[Facebook, Instagram, TikTok, X].map((Icon, i) => (
        <a
          href="#"
          target="_blank" rel="noopener"
          class="flex items-center justify-center size-6 sm:size-8 rounded-full bg-[#262628]"
        >
          <img src={Icon.src} alt="" class="w-3 sm:w-4 h-3 sm:h-4" />
        </a>
      ))}
      <span class="hidden sm:inline">@marbezshop</span>
    </div>

    <!-- Email + botón -->
    <div class="flex items-center gap-2">
      <span class="truncate max-w-[120px] sm:max-w-none">contacto@marbezshop.com</span>
      <a
        href="#"
        class="bg-secundario hover:bg-yellow-600 text-white font-bold px-2 py-1 rounded text-xs sm:text-sm"
      >
        CONTACTO
      </a>
    </div>
  </div>

  <!-- Main navbar -->
  <div class="bg-white shadow px-4 sm:px-8 md:px-16">
    <div class="flex items-center justify-between py-3">

      <!-- Logo -->
      <a href="/" class="flex-shrink-0">
        <img src={LogoHorizontal.src} alt="Logo Marbez" class="h-8 sm:h-10 md:h-14" />
      </a>

      <!-- Nav desktop -->
      <nav class="hidden md:flex gap-6 font-semibold text-black text-sm">
        <!-- … tus enlaces … -->
      </nav>

      {/*** Empieza el toggle móvil ***/}
      <div class="md:hidden relative">
        <!-- 1) Checkbox oculto -->
        <input id="menu-toggle" type="checkbox" class="hidden peer" />

        <!-- 2) Label con icono hamburguesa -->
        <label for="menu-toggle" class="cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-800" fill="none"
               viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </label>

        <!-- 3) Menú desplegable: oculto por defecto, visible cuando #menu-toggle está checked -->
        <nav
          class="hidden peer-checked:flex flex-col absolute right-4 mt-2 bg-white border border-gray-200
                 rounded shadow-lg w-40 z-50 divide-y divide-gray-100 text-sm"
        >
          <a href="/" class="px-4 py-2 hover:bg-gray-100">INICIO</a>
          <a href="/categories" class="px-4 py-2 hover:bg-gray-100">PRODUCTOS</a>
          <a href="/blog" class="px-4 py-2 hover:bg-gray-100">BLOG</a>
        </nav>
      </div>
      {/*** Fin toggle móvil ***/}

    </div>
  </div>

</header>
