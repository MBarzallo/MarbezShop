---
import Facebook from "../../assets/social-media/facebook.svg";
import Instagram from "../../assets/social-media/instagram.svg";
import TikTok from "../../assets/social-media/tiktok.svg";
import X from "../../assets/social-media/twitter.svg";
import LogoHorizontal from "../../assets/logos/logo-horizontal.png";
---

<header class="w-full">
  <!-- Top bar -->
  <div
    class="bg-black text-white text-sm flex justify-between items-center px-8 py-4"
  >
    <!-- Social icons -->
    <div class="flex gap-3 items-center">
      <a
        href="#"
        aria-label="Facebook"
        class="flex items-center justify-center size-8 rounded-full bg-[#262628]"
      >
        <img src={Facebook.src} alt="Facebook" class="w-4 h-4" />
      </a>

      <a
        href="#"
        aria-label="Instagram"
        class="flex items-center justify-center size-8 rounded-full bg-[#262628]"
      >
        <img src={Instagram.src} alt="Instagram" class="w-4 h-4" />
      </a>

      <a
        href="#"
        aria-label="TikTok"
        class="flex items-center justify-center size-8 rounded-full bg-[#262628]"
      >
        <img src={TikTok.src} alt="TikTok" class="w-4 h-4" />
      </a>

      <a
        href="#"
        aria-label="X"
        class="flex items-center justify-center size-8 rounded-full bg-[#262628]"
      >
        <img src={X.src} alt="X" class="w-4 h-4" />
      </a>
      <span>@marbezshop</span>
    </div>
    <!-- Contacto -->
    <div class="flex items-center gap-4">
      <span>contacto@marbezshop.com</span>
      <a
        href="#"
        class="bg-secundario hover:bg-yellow-600 text-white font-bold px-3 py-1 rounded text-sm"
        >CONTACTO</a
      >
    </div>
  </div>

  <!-- Main navbar -->
  <div class="bg-white flex justify-between items-center px-16 shadow">
    <!-- Logo -->
    <div class="flex items-center py-6">
      <img src={LogoHorizontal.src} alt="Logo Marbez" class="h-14 w-auto" />
      
    </div>
    <!-- Nav links -->
    <nav class="flex gap-8 font-semibold text-black text-sm">
      <a href="#" class="border-b-4 border-yellow-400 pb-1">INICIO</a>
      <a href="#" class="hover:text-yellow-500">PRODUCTOS</a>
      <a href="#" class="hover:text-yellow-500">BLOG</a>
    </nav>
  </div>
</header>
